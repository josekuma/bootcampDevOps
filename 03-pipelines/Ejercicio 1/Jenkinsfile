pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps{
            checkout scmGit(branches: [[name: '*/master']], userRemoteConfigs: [[url: 'https://github.com/josekuma/bootcampDevOps.git']]) 
             ws: '/03-pipelines/Ejercicio 1/jenkins-resources/calculator'

         
            }

        }
        stage('Compile') {
            steps {
                
                    sh './gradlew compileJava'

            
            }
        }
        stage('Unit Tests') {
            steps {
                sh './gradlew test'
            }
        }
    }
}
