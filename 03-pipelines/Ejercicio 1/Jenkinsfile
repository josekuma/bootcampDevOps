pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps{
            checkout scmGit(branches: [[name: '*/master']], 
            extensions: [[$class: 'RelativeTargetDirectory', 
            relativeTargetDir: 'bootcampDevOps/03-pipelines/Ejercicio 1/jenkins-resources/calculator/']], 
            userRemoteConfigs: [[url: 'https://github.com/josekuma/bootcampDevOps.git']]) 

         
            }

        }
        stage('Compile') {
            steps {
                    sh "echo $WORKSPACE"
                    sh './gradlew compileJava'

            
            }
        }
        stage('Unit Tests') {
            steps {
                sh './gradlew test'
            }
        }
    }
}
